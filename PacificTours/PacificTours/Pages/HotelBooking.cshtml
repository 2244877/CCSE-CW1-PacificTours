@page
@model PacificTours.Pages.HotelBookingModel
@{
}

<div class="row">
    <div class="col-lg-6 mx-auto rounded border p-3">
        <h2 class=“text-center mb-3”>New Hotel Booking</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        
        <form id="HotelBookingForm" method="post">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Hotel</label>
                <div class="col-sm-10">
                    <select class="form-control">
                        <option value="">-- Select --</option>
                        <option value="">Hilton London Hotel</option>
                        <option value="">London Marriot Hotel</option>
                        <option value="">Travelodge Brighton Seafront</option>
                        <option value="">Kings Hotel Brighton</option>
                        <option value="">Leonardo Hotel Brighton</option>
                        <option value="">Nevis Bank Inn, Fort William</option>
                    </select>


                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Room</label>
                <div class="col-sm-10">
                    <select class="form-control">
                        <option value="">-- Select --</option>
                        <option value="">Single</option>
                        <option value="">Double</option>
                        <option value="">Family</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Check In</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control w-100" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Check Out</label>
                <div class="col-sm-10 date">
                    <input type="date" class="form-control w-100"/>
                </div>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Confirm</button>
            <button class="w-100 btn btn-lg btn-secondary" href="/">Cancel</button>

            <!-- reference public class input model -->
        </form>
    </div>
</div>