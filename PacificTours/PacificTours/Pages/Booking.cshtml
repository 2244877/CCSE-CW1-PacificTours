@page
@model PacificTours.Pages.BookingModel
@{
}

<div class="text-center">
    <h1 class="display-4">Bookings Page</h1>
</div>

<a class="btn btn-primary btn-sm" href="/HotelBooking">New Hotel Booking</a>
<a class="btn btn-primary btn-sm" href="/TourBooking">New Tour Booking</a>

<div>
    <table class="table">
        <tr>
            <th>Hotel Name</th>
            <th>Single Room Price Per Night</th>
            <th>Double Room Price Per Night</th>
            <th>Family Room Price Per Night</th>
        </tr>
        @foreach (var item in Model.HotelList)
        {
            <tr>
                <td>@item.HotelName</td>
                <td>@item.SingleRoomPrice</td>
                <td>@item.DoubleRoomPrice</td>
                <td>@item.FamilyRoomPrice</td>
            </tr>
        }
    </table>
</div>

<div>
    <table class="table">
        <tr>
            <th>Tour Name</th>
            <th>Tour Price</th>
        </tr>
        @foreach (var item in Model.TourList)
        {
            <tr>
                <td>@item.TourName</td>
                <td>@item.TourPrice</td>
            </tr>
        }
    </table>
</div>