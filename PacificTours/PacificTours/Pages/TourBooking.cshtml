@page
@model PacificTours.Pages.TourBookingModel
@{
    ViewData["Title"] = "Tour Booking";
}

<div class="row">
    <div class="col-lg-6 mx-auto rounded border p-3">
        <h2 class="text-center mb-3">New Tour Booking</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        
        <form id="TourBookingForm" method="post" asp-controller="TourBooking" asp-action="SubmitBooking">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Tour Type</label>
                <div class="col-sm-10">
                    <select class="form-control" "> <!--ADDTHISBACKIN: name=" Hotel" asp-for="Input.Tour-->
                        <option value="">-- Select --</option>
                        <option value="">Real Britain (6 days)</option>
                        <option value="">Britain and Ireland Explorer (16 days)</option>
                        <option value="">Best of Britain (12 days)</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Check In</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control w-100" name="CheckIn" " /> <!--ADDTHISBACKIN: asp-for=" Input.TourCheckInDate-->
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Check Out</label>
                <div class="col-sm-10 date">
                    <input type="date" class="form-control w-100" name="CheckOut" /> <!--ADDTHISBACKIN: asp-for="Input.TourCheckOutDate"-->
                </div>
            </div>

            <button id="HotelBookingSubmission" type="submit" class="w-100 btn btn-lg btn-primary">Confirm Booking</button>
            <button class="w-100 btn btn-lg btn-secondary mt-2">Cancel</button>
        </form>
    </div>
</div>