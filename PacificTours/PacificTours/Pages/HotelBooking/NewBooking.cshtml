@page
@model PacificTours.Pages.HotelBooking.NewBookingModel
@{
}

<br />
<h2>New Booking</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alter-dismissible fade slow" role="alter">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class"row mb-3">
        <label class="col-sm-3 col-form-label">Hotel</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="hotel" value="@Model.hotelBookingInfo.hotel" />
        </div>
    </div>
    <div class"row mb-3">
        <label class="col-sm-3 col-form-label">Room</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="room" value="@Model.hotelBookingInfo.room" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alter-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <burron typeof="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></burron>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>